<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Faq">


    <ImageButton
        android:id="@+id/faq_backbtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="344dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/faq_faqtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="184dp"
        android:fontFamily="sans-serif-black"
        android:text="FAQ"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/faq_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faq_faqtxt">

        <!-- FAQ 1 -->
        <TextView
            android:id="@+id/que1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/whitegborder"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onQuestionClick"
            android:padding="20dp"
            android:text="เป็นแอปสำหรับอะไร?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ans1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="เป็นแอปสำหรับช่วยเหลือผู้ที่เริ่มสนใจในการปลูกพืช"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone" />

        <!-- FAQ 2 -->
        <TextView
            android:id="@+id/que2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/whitegborder"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onQuestionClick"
            android:padding="20dp"
            android:text="แอปพลิเคชันนี้ทำอะไรได้บ้าง?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ans2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ดูรูปภาพและข้อมูลเกี่ยวกับพืชแต่ละชนิด เรียนรู้วิธีดูแลพืชของคุณ ตั้งค่าเตือนความจำสำหรับการรดน้ำ ใส่ปุ๋ย และดูแลพืช"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone" />

        <!-- FAQ 3 -->
        <TextView
            android:id="@+id/que3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/whitegborder"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onQuestionClick"
            android:padding="20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="แอปพลิเคชันนี้มีค่าใช้จ่ายหรือไม่?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ans3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="แอปพลิเคชันนี้สามารถใช้งานได้ฟรี คุณสามารถดาวน์โหลดและใช้งานฟีเจอร์หลักทั้งหมดได้ฟรี"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone" />

        <!-- FAQ 4 -->
        <TextView
            android:id="@+id/que4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/whitegborder"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onQuestionClick"
            android:padding="20dp"
            android:text="ฉันจะติดต่อฝ่ายสนับสนุนลูกค้าได้อย่างไร?"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ans4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="ติดต่อทาง: narathip.sun@kkumail.com"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>